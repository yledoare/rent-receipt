<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_rent_receipt_location">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Rental Receipt Location Report</h2>
                        <p><strong>Location:</strong> <span t-field="doc.name"/></p>
                        <p><strong>Price:</strong> <span t-field="doc.amount"/></p>
                        <p><strong>Description:</strong> <span t-field="doc.description"/></p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
