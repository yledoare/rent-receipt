<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="mail_template_yld" model="mail.template">
			<field name="name">Email Template For rent receipt</field>
			<field name="model_id" ref="model_rent_receipt_location"/>
			<field name="email_from">{{object.property_id.owner_id.email}}</field>
			<field name="email_to">{{object.customer_id.email}}</field>
			<field name="subject">Rent receipt</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
						<h2> Hi, <t t-out="object.customer_id.name"/> </h2>
						<div>
							<h3>You will find here you rent receipt</h3>
						</div>
					</div>
					<br/>
					<br/>
					Regards,
					<br/>
					<t t-out="object.object.property_id.owner_id.name"/>
					<br/>
				</div>
			</field>
		</record>
	</data>
</odoo>
